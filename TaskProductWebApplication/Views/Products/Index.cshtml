@model IEnumerable<TaskProductWebApplication.Models.Product>
@{
    var searchTerm = ViewBag.SearchTerm as string;
}
<div class="container mt-3">
    <h3>Product List</h3>
    <form method="get" class="mb-3">
        <div class="input-group">
            <input type="text" name="searchTerm" value="@searchTerm" class="form-control" placeholder="Search by product or description..." />
            <button type="submit" class="btn btn-primary">Search</button>
        </div>
    </form>
    <a href="@Url.Action("Create", "Products")" class="btn btn-primary float-right mb-2">Add Product</a>

    <table class="table table-bordered">
        <thead class="thead-light">
            <tr>
                <th>SN</th>
                <th>Product</th>
                <th>Description</th>
                <th>Created</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @{
                int sn = 1;
                foreach (var item in Model)
                {
                    <tr>
                        <td>@sn</td>
                        <td>@item.ProductName</td>
                        <td>@item.Description</td>
                        <td>@item.Created.ToString("yyyy-MM-dd HH:mm:ss")</td>
                        <td>
                            <button class="btn btn-info btn-sm" onclick="showDetails(@item.ProductID)">🔍</button>
                            <a href="@Url.Action("Edit", "Products", new { id = item.ProductID })" class="btn btn-info btn-sm">✏️</a>
                            <a href="@Url.Action("Delete", "Products", new { id = item.ProductID })" class="btn btn-danger btn-sm">❌</a>
                        </td>
                    </tr>
                    sn++;
                }
            }
        </tbody>
    </table>
</div>

<!-- Bootstrap Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="detailsModalLabel">Product Details</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="detailsModalBody">
        <!-- Details will be loaded here -->
      </div>
    </div>
  </div>
</div>

@section Scripts {
    <script>
        function showDetails(id) {
            $.get('@Url.Action("Details", "Products")', { id: id }, function (data) {
                $('#detailsModalBody').html(data);
                var modal = new bootstrap.Modal(document.getElementById('detailsModal'));
                modal.show();
            });
        }
    </script>
}
